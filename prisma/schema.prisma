generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recipient {
  id        String  @id @default(uuid())
  name      String
  latitude  Decimal
  longitude Decimal
  orders    Order[]

  @@map("recipients")
}

enum UserRole {
  ADMIN
  DELIVERY
}

model User {
  id       String   @id @default(uuid())
  name     String
  cpf      String   @unique
  password String
  role     UserRole
  orders   Order[]

  @@map("users")
}

enum OrderStatus {
  NEW
  PENDING
  PICKUP
  DELIVERED
  RETURNED
}

model Order {
  id               String      @id @default(uuid())
  recipientId      String
  deliveryPersonId String?
  description      String
  status           OrderStatus
  createdAt        DateTime    @default(now()) @map("created_at")
  updatedAt        DateTime?   @updatedAt @map("updated_at")
  deliveryProof    String?

  recipient      Recipient @relation(fields: [recipientId], references: [id])
  deliveryPerson User?     @relation(fields: [deliveryPersonId], references: [id])
}
